<odoo>
    <record id="view_account_journal_form_inherit_batuz" model="ir.ui.view">
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tbai_send_invoice']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': ['|', ('type', 'not in', ['sale', 'purchase']), ('tbai_enabled', '=', False)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='tbai_active_date']" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': ['|', '|', ('tbai_send_invoice', '=', False), ('type', 'not in', ['sale', 'purchase']), ('tbai_enabled', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
