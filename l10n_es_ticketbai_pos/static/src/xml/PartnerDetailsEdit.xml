<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t
        t-name="PartnerDetailsEdit"
        t-inherit="point_of_sale.PartnerDetailsEdit"
        t-inherit-mode="extension"
        owl="1"
    >
        <xpath expr="//div[hasclass('partner-details-left')]" position="inside">
            <div class="partner-detail">
                <span class="label">Anonymous customer</span>
                <input
                    class="detail"
                    name="aeat_anonymous_cash_customer"
                    type="checkbox"
                    t-model="changes.aeat_anonymous_cash_customer"
                    t-on-change="captureChange"
                    t-att-value="props.partner.aeat_anonymous_cash_customer || ''"
                />
            </div>
        </xpath>
    </t>
</templates>
