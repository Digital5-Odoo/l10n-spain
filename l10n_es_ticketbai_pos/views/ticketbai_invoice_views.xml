<odoo>
    <record id="tbai_invoice_form_inherit_pos" model="ir.ui.view">
        <field name="name">tbai.invoice.view.form.inherit.pos</field>
        <field name="model">tbai.invoice</field>
        <field name="inherit_id" ref="l10n_es_ticketbai.tbai_invoice_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_id']" position="after">
                <field
                    name="pos_order_id"
                    readonly="1"
                    attrs="{'invisible': [('pos_order_id', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
